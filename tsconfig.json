{
  "compileOnSave": false,
  "compilerOptions": {
    "types": [
      "hammerjs"
    ],
    "downlevelIteration": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "allowSyntheticDefaultImports" : true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "assert": [
        "./assert.ts"
      ],
      "path": [
        "./node_modules/path-browserify"
      ],
      "jszip": [
        "../node_modules/jszip/dist/jszip.min.js"
      ]
    }
  }
}
